2. Need Refactor

function statusCaps() {
    let toggle = document.getElementsByClassName('togglePointer')[0];
    toggle.classList.toggle('togglePointer-active');
}

function statusShift() {
    let toggle = document.getElementsByClassName('togglePointer')[1];
    toggle.classList.toggle('togglePointer-active');
}



